<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Edit Place</h1>
  <div class="col-6 offset-3">
    <% layout('layouts/boilerplate')%>
    <form
      action="/places/<%= place._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="place[title]"
          value="<%=place.title%>"
          required
        />
        <div class="valid-feedback">Perfect !!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="place[location]"
          value="<%= place.location%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="place[image]"
          value="<%= place.image%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price of the Place</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="place[price]"
            value="<%= place.price%>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">description </label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="place[description]"
          required
        >
        <%= place.description%> 
        </textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update this changes</button>
      </div>
    </form>
    <a href="/places/<%= place._id%>">Back To Place</a>
  </div>
</div>
