<div class="row">
  <h1 class="text-center">New Place</h1>
  <div class="col-6 offset-3">
    <% layout('layouts/boilerplate')%>
    <form action="/places" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="place[title]"
          required
        />
        <div class="valid-feedback">Perfect !!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="place[location]"
          required
        />
        <div class="valid-feedback">Perfect !!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="place[image]"
          required
        />
        <div class="valid-feedback">Perfect !!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price of the Place</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="place[price]"
            required
          />
          <div class="valid-feedback">Perfect !!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">description </label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="place[description]"
          required
        ></textarea>
        <div class="valid-feedback">Perfect !!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add this Place</button>
      </div>
    </form>
    <a href="/places">All Places</a>
  </div>
</div>
