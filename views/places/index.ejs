<% layout('layouts/boilerplate')%>
    <h1>All Places</h1>
    <div>
        <a href="/places/new">Add a Place</a>
    </div>
    <% for (let place of places){%>
      <div class="card">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= place.image%>" alt="">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= place.title%> 
            </h5>
            <p class="card-text">
              <%= place.description %> 
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%= place.location%> 
              </small>
            </p>
            <a class="btn btn-primary" href="/places/<%= place._id%>">View <%= place.title%> </a>
          </div>
        </div>
      </div>
    <%}%>
    
