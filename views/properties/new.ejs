<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center" style="color: rgb(255, 255, 255) ;
    -webkit-text-fill-color: rgb(255, 255, 255) ;">Add New Property</h1>
    <div class="col-6 offset-3">
        <form action="/properties" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Title</label>
                <input class="form-control" type="text" id="title" name="property[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Location</label>
                <input class="form-control" type="text" id="location" name="property[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>        
            <div class="mb-3">
                <label class="form-label" for="price" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="property[price]"  required>
                        <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Description</label>
                <textarea class="form-control" type="text" id="description" name="property[description]" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> 
            <div class="mb-3">
                <label for="image" class="mb-3" style="color: rgb(255, 255, 255) ;
                -webkit-text-fill-color: rgb(255, 255, 255) ;">Upload Image</label>
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple style="color: rgb(255, 255, 255) ;
                    -webkit-text-fill-color: rgb(255, 255, 255) ;">
                </div>
            </div>      
            <button class="mb-3 btn btn-success">Add Property</button>
        </form>
        <a class="mb-3 btn btn-dark" href="/properties">Explore Properties</a>
    </div>
</div>
